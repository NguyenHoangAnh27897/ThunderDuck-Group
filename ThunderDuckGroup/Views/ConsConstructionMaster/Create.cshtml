
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/ThunderDuckConstruction/_LayoutWebmaster.cshtml";
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmasterconstruction/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Thêm mới</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- Start form -->
        <div class="form-area">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Thêm mới </h4>
                            </div>
                        </div>
                        <form action="/consconstructionmaster/create" method="post" enctype="multipart/form-data">
                            <fieldset>
                                <div class="form-group">
                                    <label>Tên xây dựng</label>
                                    <input type="text" id="tenxd" name="tenxd" class="form-control" placeholder="">
                                </div>
                                <div class="form-group">
                                    <label>Hình ảnh đại diện</label>
                                    <input type="file" name="ava" accept="image/*" />
                                </div>
                                <div class="form-group">
                                    <label>Mô tả</label>
                                    <input type="text" id="mota" name="mota" class="form-control" placeholder="">
                                </div>
                                <div class="form-group">
                                    <label>Hình ảnh </label>
                                    <input type="file" name="image" accept="image/*" multiple="multiple" />
                                </div>
                                <button type="submit" class="btn btn-primary mt-4 pl-4 pr-4">Thêm mới</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


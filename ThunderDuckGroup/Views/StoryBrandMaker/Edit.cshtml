@model IQueryable<ThunderDuckGroup.Models.Td_BrandMaker_Story>
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/ThunderDuckBrandMaker/_LayoutWebmaster.cshtml";
    string[] arrStr;
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmasterbrandmaker/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Quản lý câu chuyện</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Start form -->
        <div class="form-area">
            <div class="row">

                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Chỉnh sửa hình ảnh hiển thị và nội dung câu chuyện</h4>
                            </div>
                        </div>

                        <div class="section-body">
                            <form action="/storybrandmaker/edit" method="post" enctype="multipart/form-data">
                                @if (Model.FirstOrDefault().Images != null)
                                {
                                    if (Model.FirstOrDefault().Images.Contains(","))
                                    {
                                        arrStr = Model.FirstOrDefault().Images.Split(',');
                                        <div class="form-group">
                                            <label for="exampleFormControlFile1">Hình ảnh (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1920x600 HOẶC LỚN HƠN)</label>
                                            <br />
                                            <input type="file" name="images" accept="image/*"/>
                                            <div class="row">
                                                @foreach (var img in arrStr)
                                                {

                                                    <div class="col-sm-3 bg-slider" style="background: url('../../Images/ThunderDuckGroup/imageHome/@img') center center no-repeat / cover;">
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="form-group">
                                            <label for="exampleFormControlFile1">Hình ảnh (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1920x600 HOẶC LỚN HƠN)</label>
                                            <br />
                                            <input type="file" name="images" accept="image/*">
                                            <img src="~/Images/ThunderDuckGroup/imageHome/@Model.FirstOrDefault().Images" style="width:100%" />
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Hình ảnh (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1920x600 HOẶC LỚN HƠN)</label>
                                        <br />
                                        <input type="file" name="images" accept="image/*" />
                                    </div>
                                }
                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tiêu đề (VUI LÒNG NHẬP DƯỚI 150 KÍ TỰ)</label>
                                    <input maxlength="150" type="text" class="form-control" placeholder="" name="title" value="@Model.FirstOrDefault().Title">
                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="exampleFormControlInput4">Nội dung (VUI LÒNG NHẬP DƯỚI 500 KÍ TỰ)</label>
                                            <textarea maxlength="500" name="des" class="form-control" maxlength="1000" rows="20" cols="50" style="height: 200px">@Model.FirstOrDefault().Description</textarea>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="exampleFormControlInput4">Nội dung 1 (VUI LÒNG NHẬP DƯỚI 500 KÍ TỰ)</label>
                                            <textarea maxlength="500" name="des1" class="form-control" rows="20" cols="50" style="height: 200px">@Model.FirstOrDefault().Description1</textarea>
                                        </div>
                                    </div>
                                </div>

                                @if (Model.FirstOrDefault().Signature != null)
                                {
                                    if (Model.FirstOrDefault().Signature.Contains(","))
                                    {
                                        arrStr = Model.FirstOrDefault().Signature.Split(',');
                                        <div class="form-group">
                                            <label for="exampleFormControlFile1">Chữ Kí (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 200x54 HOẶC LỚN HƠN)</label>
                                            <br />
                                            <input type="file" name="sign" accept="image/*"/>
                                            <div class="row">
                                                @foreach (var img in arrStr)
                                                {

                                                    <div class="col-sm-3 bg-slider" style="background: url('../../Images/ThunderDuckGroup/imageHome/@img') center center no-repeat / cover;">
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="form-group">
                                            <label for="exampleFormControlFile1">Chữ kí (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 200x54 HOẶC LỚN HƠN)</label>
                                            <br />
                                            <input type="file" name="sign" accept="image/*">
                                            <img src="~/Images/ThunderDuckGroup/imageHome/@Model.FirstOrDefault().Signature" style="width:100%" />
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Chữ kí (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 200x54 HOẶC LỚN HƠN)</label>
                                        <br />
                                        <input type="file" name="sign" accept="image/*" />
                                    </div>
                                }
                                <input class="btn btn-primaryt" type="submit" value="Lưu" />
                            </form>
                        </div>

                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
<script src="~/Content/Webmaster/js/ckeditor/ckeditor.js"></script>
<script src="~/Content/Webmaster/js/ckeditor/samples/js/sample.js"></script>
<script>
    CKEDITOR.replace('editor');
</script>
<script>
    CKEDITOR.replace('textb');
    CKEDITOR.replace('texta');
    CKEDITOR.replace('textc');

</script>

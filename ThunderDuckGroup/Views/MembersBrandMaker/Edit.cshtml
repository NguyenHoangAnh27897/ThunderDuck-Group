@model IEnumerable<ThunderDuckGroup.Models.Member>
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/ThunderDuckBrandMaker/_LayoutWebmaster.cshtml";
    string[] arrStr;
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmasterbrandmaker/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Danh sách thành viên</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- Start form -->
        <div class="form-area">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Chỉnh sửa thông tin thành viên</h4>
                            </div>
                        </div>
                        <form action="/membersbrandmaker/edit" method="post" enctype="multipart/form-data">
                            <fieldset>
                                @if (Model.FirstOrDefault().memem.FirstOrDefault().Images != null)
                                {
                                    arrStr = Model.FirstOrDefault().memem.FirstOrDefault().Images.Split(',');
                                    <div class="form-group">
                                        <label>Hình Ảnh (VUI LÒNG THÊM HÌNH ẢNH KÍCH CỠ 210x250 HOẶC LỚN HƠN)</label>
                                        <br />
                                        <input type="file" name="images" accept="image/*"/>
                                        <div class="row">
                                            @foreach (var img in arrStr)
                                            {

                                                <div class="col-sm-3 bg-slider" style="background: url('../../Images/ThunderDuckGroup/imageHome/@img') center center no-repeat; margin-left: 15px; margin-top: 15px;">
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }

                                else
                                {
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Hình ảnh</label>
                                        <br />
                                        <input type="file" name="images" accept="image/*"/>
                                    </div>
                                }

                                <div class="form-group">
                                    <label>Tiêu đề (VUI LÒNG NHẬP DƯỚI 200 KÍ TỰ)</label>
                                    <input maxlength="200" type="text" id="title" name="title" class="form-control" value="@Model.FirstOrDefault().memem.FirstOrDefault().Title" />
                                    <input type="hidden" name="id" value="@Model.FirstOrDefault().memem.FirstOrDefault().id" />
                                </div>

                                <div class="form-group">
                                    <label>Nội dung (VUI LÒNG NHẬP DƯỚI 150 KÍ TỰ)</label>
                                    <input maxlength="150" type="text" id="subtitle" name="subtitle" class="form-control" value="@Model.FirstOrDefault().memem.FirstOrDefault().Subtitle" />

                                </div>

                                <button type="submit" class="btn btn-primary mt-4 pl-4 pr-4">Lưu </button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


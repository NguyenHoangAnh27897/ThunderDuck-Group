@using PagedList.Mvc;
@using GridMvc.Html;
@model PagedList.IPagedList<ThunderDuckGroup.Models.Td_BrandMaker_Tours>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/ThunderDuckBrandMaker/_LayoutWebmaster.cshtml";
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmasterbrandmaker/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Quản lý tour</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- Start form -->
        <div class="form-area">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Danh sách tour</h4>
                            </div>
                            <div class="align-self-center">
                                <a class="btn btn-success" style="position:absolute;top:15px;right:37px" href="/tourbrandmaker/create">Thêm</a>
                            </div>
                        </div>
                        <div class="section-body">
                            <div class="table-responsive">
                                <table class="table table-hover progress-table text-white text-center" border="0" style="border-width:0px;border-style:None;border-collapse:collapse;">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Tiêu đề</th>
                                            <th>Nội dung</th>
                                            <th>Giá</th>
                                            <th>Số lượng</th>
                                            <th>Hình ảnh</th>
                                            <th>Thao tác khác</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>@item.id</td>
                                            <td><a href="/tourbrandmaker/edit/@item.id">@item.Title</a></td>
                                            @if (item.Description != null)
                                            {
                                                if (item.Description.Count() > 25)
                                                {
                                                    <td> @item.Description.Substring(0, 25) ...</td>
                                                }
                                                else
                                                {
                                                    <td> @item.Description</td>
                                                }
                                            }
                                            <td>@item.Price</td>
                                            <td>@item.Amount</td>
                                            <td>@item.Images</td>
                                            <td><a href="/tourbrandmaker/delete/@item.id"><img src="~/Images/Webmaster/icon/if_f-cross_256_282471.png" /></a></td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                                <div class="pagination-total-pages">
                                    <div class="pagination-style">
                                        <strong> Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</strong>
                                        @Html.PagedListPager(Model, page => Url.Action("List", new { page }))
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



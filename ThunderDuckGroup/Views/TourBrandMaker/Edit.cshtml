@model IEnumerable<ThunderDuckGroup.Models.Tour>
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/ThunderDuckBrandMaker/_LayoutWebmaster.cshtml";
    string[] arrStr;
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmasterbrandmaker/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Danh sách tour</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- Start form -->
        <div class="form-area">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Chỉnh sửa thông tin tour</h4>
                            </div>
                        </div>
                        <form action="/tourbrandmaker/edit" method="post" enctype="multipart/form-data">
                            <fieldset>
                                <div class="form-group">
                                    <label>Tiêu đề (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                    <input maxlength="50"type="text" id="namegift" name="title" class="form-control" value="@Model.FirstOrDefault().tours.FirstOrDefault().Title" />
                                    <input type="hidden" name="id" value="@Model.FirstOrDefault().tours.FirstOrDefault().id" />
                                </div>
                                <div class="form-group">
                                    <label>Nội dung (VUI LÒNG NHẬP DƯỚI 500 KÍ TỰ)</label>
                                    <input maxlength="500" type="text" id="namegift" name="des" class="form-control" value="@Model.FirstOrDefault().tours.FirstOrDefault().Description" />
                                </div>
                                <div class="form-group">
                                    <label>Giá tiền (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                    <input maxlength="50" type="text" id="namegift" name="price" class="form-control" value="@Model.FirstOrDefault().tours.FirstOrDefault().Price" />
                                </div>
                                <div class="form-group">
                                    <label>Số lượng (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                    <input maxlength="50"  type="text" id="namegift" name="amount" class="form-control" value="@Model.FirstOrDefault().tours.FirstOrDefault().Amount" />
                                </div>
                                @if (Model.FirstOrDefault().tours.FirstOrDefault().Images != null)
                                {
                                    arrStr = Model.FirstOrDefault().tours.FirstOrDefault().Images.Split(',');
                                    <div class="form-group">
                                        <label>Hình Ảnh (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 2140X1240 HOẶC LỚN HƠN)</label><br />
                                        <input type="file" name="images" accept="image/*" />
                                        <div class="row">
                                            @foreach (var img in arrStr)
                                            {

                                                <div class="col-sm-3 bg-slider" style="background: url('../../Images/ThunderDuckGroup/imageHome/@img') center center no-repeat; margin-left: 15px; margin-top: 15px;">
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }

                                else
                                {
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Hình ảnh (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 2140X1240 HOẶC LỚN HƠN)</label>
                                        <br />
                                        <input type="file" name="images" accept="image/*" />
                                    </div>
                                }
                                <button type="submit" class="btn btn-primary mt-4 pl-4 pr-4">Lưu </button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


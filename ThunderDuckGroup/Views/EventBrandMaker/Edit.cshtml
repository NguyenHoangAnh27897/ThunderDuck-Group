@model IEnumerable<ThunderDuckGroup.Models.Event>
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/ThunderDuckBrandMaker/_LayoutWebmaster.cshtml";
    string[] arrStr;

}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmasterbrandmaker/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Danh sách sự kiện</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- Start form -->
        <div class="form-area">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Chỉnh sửa thông tin sự kiện</h4>
                            </div>
                        </div>
                        <form action="/eventbrandmaker/edit" method="post" enctype="multipart/form-data">
                            <fieldset>
                                <div class="form-group">
                                    <label>Tiêu đề (VUI LÒNG NHẬP DƯỚI 250 KÍ TỰ)</label>
                                    <input maxlength="250" type="text" id="namegift" name="title" class="form-control" value="@Model.FirstOrDefault().events.FirstOrDefault().Title">
                                    <input type="hidden" name="id" value="@Model.FirstOrDefault().events.FirstOrDefault().id" />
                                </div>
                                <div class="form-group">
                                    <label>Nội dung (VUI LÒNG NHẬP DƯỚI 1000 KÍ TỰ)</label>
                                    <br />
                                    <input maxlength="1000" type="text" style=" height:100px" id="mota" name="des" class="form-control" value="@Model.FirstOrDefault().events.FirstOrDefault().Description">
                                </div>
                                @if (Model.FirstOrDefault().events.FirstOrDefault().Images != null)
                                {
                                    arrStr = Model.FirstOrDefault().events.FirstOrDefault().Images.Split(',');
                                    <div class="form-group">
                                        <label>Hình Ảnh (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1280x720 HOẶC LỚN HƠN)</label>
                                        <br />
                                        <input type="file" name="images" accept="image/*"/>
                                        <div class="row">
                                            <br />
                                            @foreach (var img in arrStr)
                                            {

                                                <div class="col-sm-3 bg-slider" style="background: url('../../Images/ThunderDuckGroup/imageHome/@img') center center no-repeat; margin-left: 15px; margin-top: 15px;">
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }

                                else
                                {
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Hình ảnh (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1280x720 HOẶC LỚN HƠN)</label><br />
                                        <input type="file" name="images" accept="image/*"/>
                                    </div>
                                }
                                <div class=" row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Giá tiền (VUI LÒNG NHẬP DƯỚI 100 KÍ TỰ)</label>
                                            <input maxlength="100" type="text" id="gia" name="price" class="form-control" value="@Model.FirstOrDefault().events.FirstOrDefault().Price">
                                        </div>
                                        <div class="form-group">
                                            <label>Số lượng  (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                            <input maxlength="50" type="text" id="gia" name="amount" class="form-control" value="@Model.FirstOrDefault().events.FirstOrDefault().Amount">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Khu vực</label>
                                    <select style="width:50%" id="loaigift" name="typeevent" class="form-control">
                                        @foreach (var item in Model.FirstOrDefault().area)
                                        {
                                            <option value="@item.id">@item.Type</option>
                                        }

                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary mt-4 pl-4 pr-4">Lưu </button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@model IEnumerable<ThunderDuckGroup.Models.Td_BrandMaker_AreaType>
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/ThunderDuckBrandMaker/_LayoutWebmaster.cshtml";
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmasterbrandmaker/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Danh sách sự kiện</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- Start form -->
        <div class="form-area">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Thêm mới sự kiện</h4>
                            </div>
                        </div>
                        <form action="/eventbrandmaker/create" method="post" enctype="multipart/form-data">
                            <fieldset>
                                <div class="form-group">
                                    <label>Tiêu đề (VUI LÒNG NHẬP DƯỚI 250 KÍ TỰ)</label>
                                    <input maxlength="250" type="text" id="namegift" name="title" class="form-control" placeholder="">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Nội dung (VUI LÒNG NHẬP DƯỚI 1000 KÍ TỰ)</label>
                                    <textarea maxlength="1000" name="des" class="form-control"rows="20" cols="50" style="height: 200px"></textarea>
                                </div>

                                <div class="form-group">
                                    <label>Hình Ảnh (VUI LÒNG THÊM HÌNH ẢNH VỚI KÍCH CỠ 1280 x720 HOẶC LỚN HƠN)</label><br />
                                    <input type="file" name="images" accept="image/*"/>
                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Giá tiền (VUI LÒNG NHẬP DƯỚI 100 KÍ TỰ)</label>
                                            <input maxlength="100" type="text" id="price" name="price" class="form-control" placeholder="">
                                        </div>

                                        <div class="form-group">
                                            <label>Số lượng (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                            <input maxlength="50" type="text" id="price" name="amount" class="form-control" placeholder="">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label >Khu vực</label>
                                    <select style="width:50%" id="loaigift" name="typeevent" class="form-control">
                                        @foreach (var item in Model)
                                        {
                                            <option value="@item.id">@item.Type</option>
                                        }

                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary mt-4 pl-4 pr-4">Thêm mới</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
        CKEDITOR.replace('editor');
</script>

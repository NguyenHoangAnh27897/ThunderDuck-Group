@model IQueryable<ThunderDuckGroup.Models.Td_BrandMaker_Account>
    @{
        ViewBag.Title = "Edit";
        Layout = "~/Views/Shared/ThunderDuckBrandMaker/_LayoutWebmaster.cshtml";
    }

    <div class="main-wrapper">
        <div class="container">

            <!-- Start breadcrumb section  -->
            <div class="row">
                <div class="col-lg-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Quản lý tài khoản</li>
                        </ol>
                    </nav>
                </div>
            </div>

            <!-- Start form -->
            <div class="form-area">
                <div class="row">

                    <div class="col-lg-12">
                        <div class="single-form" style="width: 500px">
                            <div class="section-head">
                                <div class="title">
                                    <h4>Chỉnh sửa mật khẩu</h4>
                                </div>
                            </div>

                            <div class="section-body">
                                <form action="/accountbrandmaker/edit" method="post" enctype="multipart/form-data">
                                    <div class="row ">
                                        <div class="col-lg-3">
                                            <div class="form-group">
                                                <label for="exampleFormControlInput4" style="width: 250px; font-size: 16px">Nhập mật khẩu cũ</label>
                                                <input type="text" style="width: 400px" class="form-control" placeholder="" name="oldpassword" maxlength="50">
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleFormControlInput4" style="width: 250px; font-size: 16px">Nhập mật khẩu mới</label>
                                                <input type="text" style="width: 400px" class="form-control" placeholder="" name="newpassword" maxlength="50">
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleFormControlInput4" style="width: 250px; font-size: 16px">Xác nhận mật khẩu</label>
                                                <input type="text" style="width: 400px" class="form-control" placeholder="" name="confirmpassword" maxlength="50">
                                            </div>
                                        </div>
                                    </div>
                                    <input class="btn btn-primaryt" type="submit" value="Lưu" />
                                </form>
                            </div>

                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>




@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/ThunderDuckBrandMaker/_LayoutWebmaster.cshtml";
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmasterbrandmaker/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Danh sách hình ảnh</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- Start form -->
        <div class="form-area">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Thêm mới hình ảnh</h4>
                            </div>
                        </div>
                        <form action="/imagesbrandmaker/create" method="post" enctype="multipart/form-data">
                            <fieldset>
                                <div class="form-group">
                                    <label>Tiêu đề (VUI LÒNG VIẾT DƯỚI 150 KÍ TỰ)</label>
                                    <input maxlength="150" type="text" id="subtitle" name="subtitle" class="form-control" placeholder="">
                                </div>
                                <div class="form-group">
                                    <label>Hình Ảnh (VUi LÒNG THÊM HÌNH VỚI KÍCH CỠ 1600x800 HOẶC LỚN HƠN)</label>
                                    <br />
                                    <input type="file" name="images" accept="image/*" multiple="multiple" />
                                </div>
                                <button type="submit" class="btn btn-primary mt-4 pl-4 pr-4">Thêm mới</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


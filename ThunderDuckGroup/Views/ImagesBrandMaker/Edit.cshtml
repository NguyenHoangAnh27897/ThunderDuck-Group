@model IQueryable<ThunderDuckGroup.Models.Td_BrandMaker_Images>
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/ThunderDuckBrandMaker/_LayoutWebmaster.cshtml";
    string[] arrStr;

}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmasterbrandmaker/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa hình ảnh</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Start form -->
        <div class="form-area">
            <div class="row">

                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Chỉnh sửa hình ảnh</h4>
                            </div>
                        </div>

                        <div class="section-body">
                            <form action="/imagesbrandmaker/edit" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tiêu đề (VUI LÒNG NHẬP DƯỚI 150 KÍ TỰ)</label>
                                    <input maxlength="150" type="text" class="form-control" placeholder="" name="subtitle" value="@Model.FirstOrDefault().Subtitle">
                                    <input type="hidden" name="id" value="@Model.FirstOrDefault().id" />
                                </div>
                                <div class="row">
                                    <div class="col-lg-3">
                                        @if (Model.FirstOrDefault().images1 != null)
                                        {
                                            if (Model.FirstOrDefault().images1.Contains(","))
                                            {
                                                arrStr = Model.FirstOrDefault().images1.Split(',');
                                                <div class="form-group">
                                                    <label>Hình Ảnh (VUI LÒNG THÊM HÌNH ẢNH KÍCH CỠ 1600x800 HOẶC LỚN HƠN)</label>
                                                    <br />
                                                    <input type="file" name="images1" accept="image/*" multiple="multiple" />
                                                    <div class="row">
                                                        @foreach (var img in arrStr)
                                                        {

                                                            <div class="col-sm-3 bg-slider" style="background: url('../../Images/ThunderDuckGroup/imageHome/@img') center center no-repeat;  margin-left: 15px; margin-top: 15px;">
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="form-group">
                                                    <label for="exampleFormControlFile1">Hình ảnh 1 (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1600x800 HOẶC LỚN HƠN)</label>
                                                    <br />
                                                    <input type="file" name="images1" accept="image/*" multiple="multiple" />
                                                    <img src="~/Images/ThunderDuckGroup/imageHome/@Model.FirstOrDefault().images1" style="width:100%" />
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="form-group">
                                                <label for="exampleFormControlFile1">Hình ảnh 1 (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1920x720 HOẶC LỚN HƠN)</label>
                                                <br />
                                                <input type="file" name="images1" accept="image/*" multiple="multiple" />
                                            </div>
                                        }
                                    </div>
                                </div>
                                <input class="btn btn-primaryt" type="submit" value="Lưu" />
                            </form>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
<script src="~/Content/Webmaster/js/ckeditor/ckeditor.js"></script>
<script src="~/Content/Webmaster/js/ckeditor/samples/js/sample.js"></script>
